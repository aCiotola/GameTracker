<Window x:Class="GameTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTracker"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Title="Game Tracker" Height="600" Width="800">
    <DockPanel Background="#2B2A2F">
        <Grid DockPanel.Dock="Left" Width="100" Background="Gray">
            <ScrollViewer>
                
            </ScrollViewer>
        </Grid>
        <Grid DockPanel.Dock="Right">
            <TextBox x:Name="searchBox" Text="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" TextWrapping="Wrap" Width="120"/>
            <ComboBox x:Name="sortBox" Text="Sort By" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,10,0,0" Width="80" IsEditable="True" IsReadOnly="True"/>
            <ComboBox x:Name="limitBox" Text="Show 50" HorizontalAlignment="left" VerticalAlignment="Top" Margin="400,10,0,0" Width="80" IsEditable="True" IsReadOnly="True"/>
            <Image x:Name="gamePic" HorizontalAlignment="Left" Height="100" Margin="217,181,0,0" VerticalAlignment="Top" Width="100"/>
        </Grid>
        
    </DockPanel>
</Window>
